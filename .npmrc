# Optimizado para desarrollo local Windows sin bloqueos

# Habilitar workspaces
enable-pre-post-scripts=true
auto-install-peers=true
dedupe-peer-dependents=true

# Performance optimization
registry=https://registry.npmjs.org/
prefer-frozen-lockfile=false
strict-peer-dependencies=false

# Caching optimizado
# Se usan las rutas por defecto del sistema operativo

# Hoisting y linking - CRITICAL FOR FIREBASE/NEXT.JS
# Using hoisted node-linker for better compatibility
node-linker=hoisted
hoist=true
hoist-pattern[]=*
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=*prettier*
public-hoist-pattern[]=*typescript*
public-hoist-pattern[]=@types/*
public-hoist-pattern[]=*babel*
public-hoist-pattern[]=firebase*
public-hoist-pattern[]=next

# Workspace configuration
link-workspace-packages=true
prefer-workspace-packages=true

# Sin restricciones de scripts
enable-modules-dir=true
modules-cache-max-age=7200000

# Network optimization
network-concurrency=16
child-concurrency=5
network-timeout=60000
fetch-retries=5
fetch-retry-factor=10
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Symlinks y paths
symlink=true
package-import-method=auto

# Progress y logging
progress=true
reporter=default
loglevel=info

# Audit y security
audit-level=moderate