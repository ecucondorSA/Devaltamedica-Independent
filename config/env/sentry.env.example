# Sentry Configuration for Altamedica
# Copy this file to your .env files and replace with your actual Sentry DSN

# API Server Sentry DSN
SENTRY_DSN=https://your-sentry-dsn-for-api-server@sentry.io/project-id

# Web App Sentry DSN (public for client-side)
NEXT_PUBLIC_SENTRY_DSN=https://your-sentry-dsn-for-web-app@sentry.io/project-id

# App Version (for release tracking)
APP_VERSION=1.0.0
NEXT_PUBLIC_APP_VERSION=1.0.0

# Environment
NODE_ENV=production

# Sentry Performance Monitoring
SENTRY_TRACES_SAMPLE_RATE=0.1
SENTRY_PROFILES_SAMPLE_RATE=0.1

# Sentry Session Replay (client-side)
SENTRY_REPLAYS_SESSION_SAMPLE_RATE=0.1
SENTRY_REPLAYS_ON_ERROR_SAMPLE_RATE=1.0

# Sentry Debug Mode (development only)
SENTRY_DEBUG=false 