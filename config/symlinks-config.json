    {
      "target": "scripts",
      "link": "tools/shared-scripts",
      "description": "Shared build and deployment scripts",
      "options": {
        "relative": true,
        "force": false
      }
    }
  ],
  "metadata": {
    "created": "2025-08-12",
    "author": "AltaMedica Platform",
    "platform_compatibility": ["windows", "linux", "macos"],
    "notes": [
      "All links use relative paths for cross-platform compatibility",
      "Links are created with force=false by default to prevent accidental overwrites",
      "Run with --audit flag to verify existing symbolic links"
    ]
  }
}