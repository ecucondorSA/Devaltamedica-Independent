      "description": "Shared documentation guides for API server",
      "options": {
        "relative": true,
        "force": false
      }
    },
    {
      "target": "packages/@altamedica/ui/src/components",
      "link": "apps/web-app/src/shared-components",
      "description": "Shared UI components for web-app",
      "options": {
        "relative": true,
        "force": false,
        "createIfMissing": false
      }
    },
    {
      "target": "config/environments",
      "link": "apps/api-server/environments",
      "description": "Shared environment configurations",
      "options": {
        "relative": true,
        "force": false
