        "relative": true,
        "force": false
      }
    },
    {
      "target": "config/base/tsconfig.base.json",
      "link": "apps/doctors/tsconfig.base.json",
      "description": "Shared TypeScript base configuration for doctors app",
      "options": {
        "relative": true,
        "force": false
      }
    },
    {
      "target": "config/base/tsconfig.base.json",
      "link": "apps/patients/tsconfig.base.json", 
      "description": "Shared TypeScript base configuration for patients app",
      "options": {
        "relative": true,
        "force": false
      }
    },
    {
      "target": "config/base/tsconfig.base.json",
      "link": "apps/companies/tsconfig.base.json",
      "description": "Shared TypeScript base configuration for companies app",
      "options": {
        "relative": true,
        "force": false
      }
    },
    {
      "target": "config/base/tsconfig.base.json",
      "link": "apps/admin/tsconfig.base.json",
      "description": "Shared TypeScript base configuration for admin app",
      "options": {
        "relative": true,
