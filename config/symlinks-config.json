{
  "name": "AltaMedica Symbolic Links Configuration",
  "description": "Cross-platform symbolic links for the AltaMedica monorepo",
  "version": "1.0.0",
  "links": [
    {
      "target": "config/base/tsconfig.base.json",
      "link": "apps/web-app/tsconfig.base.json",
      "description": "Shared TypeScript base configuration for web-app",
      "options": {
        "relative": true,
        "force": false
      }
    },
    {
      "target": "config/base/tsconfig.base.json", 
      "link": "apps/api-server/tsconfig.base.json",
