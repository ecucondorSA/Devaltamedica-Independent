# Docker Environment Configuration for AltaMedica Platform
# Created: 2025-08-14

# Node Environment
NODE_ENV=development

# Database
DATABASE_URL=postgresql://altamedica:altamedica123@postgres:5432/altamedica
POSTGRES_USER=altamedica
POSTGRES_PASSWORD=altamedica123
POSTGRES_DB=altamedica

# Redis
REDIS_URL=redis://redis:6379

# Firebase - REQUIRED for production
# Get from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=altamedica-dev
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@altamedica-dev.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_ACTUAL_FIREBASE_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_DATABASE_URL=https://altamedica-dev-default-rtdb.firebaseio.com
FIREBASE_STORAGE_BUCKET=altamedica-dev.appspot.com

# JWT Secrets
JWT_SECRET=altamedica-jwt-secret-dev-2025
JWT_REFRESH_SECRET=altamedica-refresh-secret-dev-2025

# API URLs
NEXT_PUBLIC_API_BASE_URL=http://localhost:3001
NEXT_PUBLIC_WEB_APP_URL=http://localhost:3000

# WebRTC
SIGNALING_SERVER_URL=ws://localhost:8888

# Monitoring
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000

# Stripe - REQUIRED for payment processing
# Get from Stripe Dashboard > Developers > API Keys
STRIPE_SECRET_KEY=sk_test_YOUR_STRIPE_SECRET_KEY_HERE
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_STRIPE_PUBLISHABLE_KEY_HERE
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET_HERE
STRIPE_PRICE_ID_BASIC=price_YOUR_BASIC_PLAN_PRICE_ID
STRIPE_PRICE_ID_PRO=price_YOUR_PRO_PLAN_PRICE_ID

# MercadoPago - For Argentina market
# Get from MercadoPago Developers > Your Applications
MERCADOPAGO_ACCESS_TOKEN=TEST-YOUR_MERCADOPAGO_ACCESS_TOKEN_HERE
MERCADOPAGO_PUBLIC_KEY=TEST-YOUR_MERCADOPAGO_PUBLIC_KEY_HERE

# Development settings
USE_FIREBASE_EMULATOR=false
SKIP_ENV_VALIDATION=true