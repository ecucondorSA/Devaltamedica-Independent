{
  "dashboard": {
    "id": null,
    "title": "Altamedica Medical Platform - Monitoring Dashboard",
    "tags": ["altamedica", "medical", "monitoring", "hipaa"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"altamedica-api-server\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "red", "value": 0 },
                { "color": "green", "value": 1 }
              ]
            }
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 0, "y": 0 }
      },
      {
        "id": 2,
        "title": "HTTP Requests per Minute",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[1m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 6, "y": 0 }
      },
      {
        "id": 3,
        "title": "Medical Operations",
        "type": "stat",
        "targets": [
          {
            "expr": "increase(medical_operations_total[1h])",
            "legendFormat": "{{operation_type}} - {{status}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 }
      },
      {
        "id": 4,
        "title": "PHI Access Monitoring",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(phi_access_total[5m])",
            "legendFormat": "{{user_type}} - {{operation}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
      },
      {
        "id": 5,
        "title": "Appointments Today",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(appointments_total{status=\"created\"})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                { "color": "green", "value": 0 },
                { "color": "yellow", "value": 50 },
                { "color": "red", "value": 100 }
              ]
            }
          }
        },
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 8 }
      },
      {
        "id": 6,
        "title": "Telemedicine Sessions",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(telemedicine_sessions_total[5m])",
            "legendFormat": "{{status}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 18, "y": 8 }
      },
      {
        "id": 7,
        "title": "Response Times",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "unit": "s",
            "label": "Response Time"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 }
      },
      {
        "id": 8,
        "title": "Active Users",
        "type": "stat",
        "targets": [
          {
            "expr": "active_users_current",
            "legendFormat": "{{user_type}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 4, "w": 6, "x": 12, "y": 16 }
      },
      {
        "id": 9,
        "title": "Compliance Violations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(compliance_violations_total[1h])",
            "legendFormat": "{{violation_type}} - {{severity}}",
            "refId": "A"
          }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": {
                "params": [0],
                "type": "gt"
              },
              "operator": {
                "type": "and"
              },
              "query": {
                "params": ["A", "5m", "now"]
              },
              "reducer": {
                "params": [],
                "type": "last"
              },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "for": "1m",
          "frequency": "10s",
          "handler": 1,
          "name": "Compliance Violation Alert",
          "noDataState": "no_data",
          "notifications": []
        },
        "gridPos": { "h": 8, "w": 12, "x": 18, "y": 16 }
      },
      {
        "id": 10,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "nodejs_memory_usage_bytes{type=\"heapUsed\"} / 1024 / 1024",
            "legendFormat": "Heap Used (MB)",
            "refId": "A"
          },
          {
            "expr": "nodejs_memory_usage_bytes{type=\"heapTotal\"} / 1024 / 1024",
            "legendFormat": "Heap Total (MB)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "unit": "mbytes",
            "label": "Memory (MB)"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 }
      },
      {
        "id": 11,
        "title": "Database Query Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile - {{query_type}}",
            "refId": "A"
          }
        ],
        "yAxes": [
          {
            "unit": "s",
            "label": "Query Time"
          }
        ],
        "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 }
      },
      {
        "id": 12,
        "title": "Audit Log Entries",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(audit_log_entries_total[5m])",
            "legendFormat": "{{category}} - {{level}}",
            "refId": "A"
          }
        ],
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 }
      },
      {
        "id": 13,
        "title": "Telemedicine Session Duration",
        "type": "heatmap",
        "targets": [
          {
            "expr": "rate(telemedicine_session_duration_minutes_bucket[5m])",
            "format": "heatmap",
            "legendFormat": "{{le}}",
            "refId": "A"
          }
        ],
        "heatmap": {
          "xBucketSize": null,
          "yBucketSize": null,
          "yBucketBound": "auto"
        },
        "gridPos": { "h": 8, "w": 24, "x": 0, "y": 40 }
      }
    ],
    "templating": {
      "list": [
        {
          "name": "instance",
          "type": "query",
          "query": "label_values(up{job=\"altamedica-api-server\"}, instance)",
          "refresh": 1,
          "includeAll": false,
          "multi": false
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "enable": true,
          "expr": "changes(process_start_time_seconds[1m]) > 0",
          "iconColor": "blue",
          "titleFormat": "Deployment"
        }
      ]
    }
  }
}
