# Production Environment - CRÍTICO: NO usar MOCKS ni defaults
# Todas las variables deben ser configuradas antes del deploy
# Validar con: pnpm run validate:env:production
NODE_ENV=production

# Server Configuration
PORT=3001
API_URL=https://api.altamedica.com

# Firebase Admin SDK (CRÍTICO - REQUERIDO)
FIREBASE_PROJECT_ID=altamedic-20f69
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@altamedic-20f69.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nREPLACE_WITH_ACTUAL_PRIVATE_KEY\n-----END PRIVATE KEY-----
GOOGLE_APPLICATION_CREDENTIALS=./altamedic-20f69-firebase-adminsdk-fbsvc-06a561d259.json

# JWT Configuration (CRÍTICO - REQUERIDO)
JWT_SECRET=REPLACE_WITH_ACTUAL_JWT_SECRET_64_CHARS
JWT_REFRESH_SECRET=REPLACE_WITH_ACTUAL_REFRESH_SECRET_64_CHARS
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security Features (HABILITADOS en producción)
RATE_LIMIT_ENABLED=true
AUDIT_LOGGING_ENABLED=true
RBAC_ENABLED=true
PHI_ENCRYPTION_ENABLED=true
AUDIT_HASH_CHAIN_ENABLED=true

# Encryption (CRÍTICO - REQUERIDO)
ENCRYPTION_SECRET=REPLACE_WITH_ACTUAL_ENCRYPTION_KEY_32_CHARS

# CORS & Networking
ALLOWED_ORIGINS=https://altamedica.com,https://doctors.altamedica.com,https://patients.altamedica.com
SIGNALING_SERVER_URL=https://signaling.altamedica.com

# Database & External Services
REDIS_URL=redis://production-redis:6379
DATABASE_URL=postgresql://user:pass@production-db:5432/altamedica_production

# Monitoring & Logging
LOG_LEVEL=warn
LOG_FORMAT=json
SENTRY_DSN=https://sentry-key@sentry.io/production-project

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# HIPAA Compliance
PHI_ENCRYPTION_ALGORITHM=AES-256-GCM
AUDIT_LOG_RETENTION_DAYS=2555
ENCRYPTION_KEY_ROTATION_DAYS=90
