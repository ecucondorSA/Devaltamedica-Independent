# Staging Environment - NO usar MOCKS ni defaults
# Todas las variables deben ser configuradas antes del deploy
NODE_ENV=staging

# Server Configuration
PORT=3001
API_URL=https://staging-api.altamedica.com

# Firebase Admin SDK (REQUERIDO)
FIREBASE_PROJECT_ID=altamedic-20f69
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@altamedic-20f69.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nREPLACE_WITH_ACTUAL_PRIVATE_KEY\n-----END PRIVATE KEY-----
GOOGLE_APPLICATION_CREDENTIALS=./altamedic-20f69-firebase-adminsdk-fbsvc-06a561d259.json

# JWT Configuration (REQUERIDO)
JWT_SECRET=REPLACE_WITH_ACTUAL_JWT_SECRET_64_CHARS
JWT_REFRESH_SECRET=REPLACE_WITH_ACTUAL_REFRESH_SECRET_64_CHARS
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Security Features (HABILITADOS en staging)
RATE_LIMIT_ENABLED=true
AUDIT_LOGGING_ENABLED=true
RBAC_ENABLED=true
PHI_ENCRYPTION_ENABLED=true
AUDIT_HASH_CHAIN_ENABLED=true

# Encryption (REQUERIDO)
ENCRYPTION_SECRET=REPLACE_WITH_ACTUAL_ENCRYPTION_KEY_32_CHARS

# CORS & Networking
ALLOWED_ORIGINS=https://staging.altamedica.com,https://staging-doctors.altamedica.com,https://staging-patients.altamedica.com
SIGNALING_SERVER_URL=https://staging-signaling.altamedica.com

# Database & External Services
REDIS_URL=redis://staging-redis:6379
DATABASE_URL=postgresql://user:pass@staging-db:5432/altamedica_staging

# Monitoring & Logging
LOG_LEVEL=info
LOG_FORMAT=json
SENTRY_DSN=https://sentry-key@sentry.io/staging-project

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true
