#  Configuraci贸n Optimizada para Costos de Firebase

# ================================
# VARIABLES DE OPTIMIZACIN
# ================================

# Configuraci贸n del entorno (development/production)
NODE_ENV=development

# Control de Firebase en desarrollo
FIREBASE_USE_FIRESTORE=false
FIREBASE_USE_MOCK_DATA=true

# Configuraci贸n de cach茅
CACHE_TTL_USERS=300000
CACHE_TTL_APPOINTMENTS=120000
CACHE_TTL_PAYMENTS=600000
CACHE_TTL_ALERTS=60000

# L铆mites de costo
MAX_DAILY_READS=1000
MAX_HOURLY_READS=100
COST_ALERT_THRESHOLD=0.10

# Configuraci贸n de dashboard
DASHBOARD_UPDATE_INTERVAL=60000
DASHBOARD_ENABLE_AUTO_REFRESH=true

# ================================
# CONFIGURACIN FIREBASE ORIGINAL
# ================================

# Tu configuraci贸n Firebase existente
FIREBASE_PROJECT_ID=tu-proyecto-id
FIREBASE_CLIENT_EMAIL=tu-email@proyecto.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\ntu-clave-privada\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=tu-proyecto.appspot.com

# JWT Secrets (ya configurados)
JWT_SECRET=tu-jwt-secret-existente
ENCRYPTION_KEY=tu-encryption-key-existente

# ================================
# CONFIGURACIONES ADICIONALES
# ================================

# Para monitoreo de costos
ENABLE_COST_MONITORING=true
COST_REPORT_EMAIL=admin@altamedica.com

# Configuraci贸n de logging
LOG_FIREBASE_OPERATIONS=true
LOG_CACHE_OPERATIONS=false
