{
  "name": "@altamedica/patients",
  "version": "1.0.0",
  "description": "ALTAMEDICA Patients Management - Patient portal and records",
  "private": true,
  "type": "module",
  "exports": {
    "./middleware": "./src/middleware.ts"
  },
  "scripts": {
    "predev": "pnpm --dir ../../packages/types run build && pnpm --dir ../../packages/config-next run build && pnpm --dir ../../packages/shared run build && pnpm --dir ../../packages/firebase run build && pnpm --dir ../../packages/auth run build",
    "dev": "next dev --port 3003",
    "build": "npx next build",
    "build:with-deps": "pnpm --dir ../../packages/types run build && pnpm --dir ../../packages/config-next run build && pnpm --dir ../../packages/shared run build && pnpm --dir ../../packages/firebase run build && pnpm --dir ../../packages/auth run build && npx next build",
    "start": "next start --port 3003",
    "lint": "eslint . s,.tsx,.js,.jsx --no-error-on-unmatched-pattern",
    "lint:fix": "eslint . s,.tsx,.js,.jsx --fix --no-error-on-unmatched-pattern",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf .next dist coverage node_modules",
    "playwright": "playwright test",
    "playwright:ui": "playwright test --ui",
    "playwright:headed": "playwright test --headed",
    "medical-diagnosis": "playwright test tests/medical-diagnostic.spec.ts --headed --reporter=list",
    "auth-diagnosis": "playwright test tests/auth-flow-diagnostic.spec.ts --headed --reporter=list",
    "quick-diagnosis": "playwright test tests/medical-diagnostic.spec.ts tests/auth-flow-diagnostic.spec.ts --reporter=list",
    "full-health-check": "playwright test --reporter=html"
  },
  "dependencies": {
    "@altamedica/alta-agent": "workspace:*",
    "@altamedica/anamnesis": "workspace:*",
    "@altamedica/api-client": "workspace:*",
    "@altamedica/auth": "workspace:*",
    "@altamedica/config-next": "workspace:*",
    "@altamedica/firebase": "workspace:*",
    "@altamedica/hooks": "workspace:*",
    "@altamedica/shared": "workspace:*",
    "@altamedica/telemedicine-core": "workspace:*",
    "@altamedica/types": "workspace:*",
    "@altamedica/ui": "workspace:*",
    "@altamedica/utils": "workspace:*",
    "@tanstack/react-query": "^5.81.2",
    "@tanstack/react-query-devtools": "^5.81.2",
    "cookie": "^1.0.2",
    "lucide-react": "^0.536.0",
    "next": "15.3.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "socket.io-client": "^4.8.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@altamedica/eslint-config": "workspace:*",
    "@next/bundle-analyzer": "^15.4.1",
    "@next/eslint-plugin-next": "^15.3.4",
    "@playwright/test": "^1.48.0",
    "@react-three/fiber": "^8.18.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.19.11",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.35.0",
    "@typescript-eslint/parser": "^8.35.0",
    "autoprefixer": "^10.4.16",
    "date-fns": "^4.1.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.3",
    "framer-motion": "^12.23.12",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "tailwindcss": "^3.4.0",
    "three": "^0.160.0",
    "typescript": "5.5.4"
  }
}
