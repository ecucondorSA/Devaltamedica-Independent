{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "paths": {
      "@altamedica/*": ["../../*/src"],
      "../alert": ["./src/components/alert"],
      "../label": ["./src/components/label"],
      "../checkbox": ["./src/components/checkbox"],
      "@altamedica/utils": ["../../packages/utils/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.stories.tsx",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx"
  ]
}
