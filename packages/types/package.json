{
  "name": "@altamedica/types",
  "version": "1.0.0",
  "description": "Shared TypeScript types for ALTAMEDICA APIs",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist*",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:manual": "tsc --project tsconfig.json",
    "build:watch": "tsc --project tsconfig.json --watch",
    "clean": "rimraf dist",
    "type-check": "tsc --noEmit",
    "lint": "tsc --noEmit",
    "dev": "tsup src/index.ts --format=esm --watch"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "zod": "^3.25.76"
  }
}
