{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "incremental": false,
    "noEmit": false,
    "isolatedModules": true,
    "allowJs": false,
    "lib": [
      "ES2022"
    ],
    "maxNodeModuleJsDepth": 0,
    "types": [
      "node"
    ],
    "composite": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "dist-esm",
    "node_modules",
    "***.spec.ts",
    "scripts",
    "***.old.ts"
  ]
}
