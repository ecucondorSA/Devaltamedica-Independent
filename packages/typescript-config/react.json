{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": ["react", "react-dom"]
  },
  "include": ["src", "*.ts", "*.tsx", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "dist", "build", ".next", "coverage", "*.config.js", "*.config.ts"]
}
